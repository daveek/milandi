<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

 <TextView
     android:id="@+id/TranslateWordUNL"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:text="TextView1" />

 <TextView
     android:id="@+id/DescrUNL"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:layout_marginTop="39dp"
     android:text="TextView2" />

 <TextView
     android:id="@+id/UNLDescription"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/DescrUNL"
     android:layout_marginTop="40dp"
     android:text="TextView3" />

 <TextView
     android:id="@+id/phraseUNL"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/UNLDescription"
     android:layout_marginTop="23dp"
     android:text="TextView" />

 <TextView
     android:id="@+id/atribs"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/phraseUNL"
     android:layout_marginTop="20dp"
     android:text="TextView" />

</RelativeLayout>